          class='block text-gray-300 text-sm font-bold mb-1'
          for='male_pending'
        >
          Pending
        </label>
        <input
          class='shadow appearance-none border rounded mb-4 w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'
          id='male_pending'
          type='tel'
          name='male_pending'
          placeholder=''
          value={{orgName.male_pending}}
        />
        <label
          class='block text-gray-300 text-sm font-bold mb-1'
          for='male_available'
        >
          Available
        </label>
        <input
          class='shadow appearance-none border rounded mb-4 w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'
          id='male_available'
          type='tel'
          name='male_available'
          placeholder=''
          value={{orgName.male_available}}
        />
        <!--Male end-->

        {{#if orgName.special_prog_name}}
