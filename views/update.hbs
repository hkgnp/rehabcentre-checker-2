  {{#block 'content'}}
    <a
      class='bg-green-500 hover:bg-green-700 text-white text-xs w-full font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline'
      href='/user/change-password'
    >
      Click here if you want to change your password
    </a>
    <div
      class='mb-5 w-full bg-gray-900 rounded-lg shadow-lg p-12 justify-center items-center lg:col-span-3 sm:col-span-3 md:col-span-3'
    >
      <div class='text-center'>
        <p class='text-xl text-white font-bold mb-4'>Updating for
          {{orgName.org_name}}</p>
      </div>
      <form method='post'>
        <input type='hidden' name='_csrf' value='{{csrfToken}}' />

        <!--Female start-->
        <p class='text-xl text-gray-400 font-normal mb-3'><i
            class='fas fa-female'
          ></i>
          Female</p>
        <label
          class='block text-gray-300 text-sm font-bold mb-1'
          for='female_capacity'
        >
          Capacity
        </label>
        <input
          class='shadow appearance-none border rounded mb-4 w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'
          id='female_capacity'
          type='tel'
          name='female_capacity'
          placeholder=''
          value={{orgName.female_capacity}}
        />
        <label
          class='block text-gray-300 text-sm font-bold mb-1'
          for='female_pending'
        >
          Pending
        </label>
        <input
          class='shadow appearance-none border rounded mb-4 w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'
          id='female_pending'
          type='tel'
          name='female_pending'
          placeholder=''
          value={{orgName.female_pending}}
        />
        <label
          class='block text-gray-300 text-sm font-bold mb-1'
          for='female_available'
        >
          Available
        </label>
        <input
          class='shadow appearance-none border rounded mb-4 w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'
          id='female_available'
          type='tel'
          name='female_available'
          placeholder=''
          value={{orgName.female_available}}
